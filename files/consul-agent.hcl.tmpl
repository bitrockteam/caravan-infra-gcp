datacenter = "hcpoc"
data_dir = "/var/lib/consul"
log_level = "INFO"
bind_addr = {{ GetInterfaceIP \"eth0\" }}
retry_join = [
   %{ for n in keys("${cluster_nodes}") ~}
   "${cluster_nodes[n]}:8301",
   %{ endfor ~}
]
telemetry = {
   statsite_address = "127.0.0.1:2180"
}
acl {
   enabled = true
   default_policy = "deny"
   enable_token_persistence = true
   tokens = { default = "{{ with secret "consul/creds/consul-agent-role" }}{{ .Data.token }}{{ end }}" }
}
connect {
   enabled = true
   ca_provider = "vault"
   ca_config {
      token = "/etc/consul.d/vault_token"
      root_pki_path = "pki"
      intermediate_pki_path = "pki_int"
   }
}
ca_file ="/etc/consul.d/ca"
cert_file = "/etc/consul.d/cert" 
key_file = "/etc/consul.d/keyfile"
verify_incoming = true
verify_outgoing = true
#verify_server_hostname = true